<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.aescttgt.navigation.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_rojoFragment"
            app:destination="@id/rojoFragment" />
        <action
            android:id="@+id/action_menuFragment_to_verdeFragment"
            app:destination="@id/verdeFragment" />
    </fragment>
    <fragment
        android:id="@+id/rojoFragment"
        android:name="com.aescttgt.navigation.RojoFragment"
        android:label="fragment_rojo"
        tools:layout="@layout/fragment_rojo" />
    <fragment
        android:id="@+id/verdeFragment"
        android:name="com.aescttgt.navigation.VerdeFragment"
        android:label="fragment_verde"
        tools:layout="@layout/fragment_verde" />
</navigation>